<!DOCTYPE html>
<html>
  <head>
    <title>Base Rails</title>
    <%= csrf_meta_tags %>
     <%= favicon_link_tag asset_path('download.jpg') %>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <style>
      body { background-color: #BDF5EF; }
    </style> 
    <style>
      h1{
        font-size: 50px; color: #ooooo;
        display: flex;
        flex-direction: column;
        align-items: center;
        font-family:'Cardo'
      }

    </style>

    <style>
      .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 50%;
      }

    </style>
  </head>

  <body>
  <nav>
      <ul>
      
        
         
        <li>
          <a href="/">Home</a>
        </li>
        
       
        
        <% if @current_user %>
            <li><a href="/verbs">My Page</a></li>
            
            <li><a href="/user_sign_out">Sign Out</a></li>
        <% else %>
          <li>
            <a href="/user_sign_up">Sign Up</a>
          </li>
          <li>
            <a href="/user_sign_in">Sign In</a>
          </li>
        <% end %>
           
        
      </ul>
    </nav>   

    <% if notice.present? %>
    <div style="border: thin green solid; color: green;">
    <%= notice %>
    </div> 
    <% end %>


    <% if alert.present? %>
    <div style="border: thin red solid; color: red;">
      <%= alert %>
    </div>
    <% end %>


    <%= yield %>
  </body>
</html>
